<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltMenuListItemMainActivity"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Medium Text"
        android:id="@+id/txtMenuItemMainActivity"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgChevronRight"
        android:src="@mipmap/ic_chevron_right_black_36dp"
        android:tint="#999999"
        android:alpha="0.5"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/txtMenuItemMainActivity"
        android:layout_alignEnd="@+id/txtMenuItemMainActivity"
        />
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="#c8c7cc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</RelativeLayout>